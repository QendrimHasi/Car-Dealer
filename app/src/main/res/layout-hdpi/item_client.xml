<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tableLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    android:stretchColumns="*">

    <TextView
        android:id="@+id/code"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/load"
        android:textAlignment="center"
        android:textSize="12sp"
        app:fontFamily="sans-serif-condensed"
        app:layout_constraintBaseline_toBaselineOf="@+id/delivery_date"
        app:layout_constraintEnd_toStartOf="@+id/delivery_date"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/delivery_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/load"
        android:textAlignment="center"
        android:textSize="12sp"
        app:fontFamily="sans-serif-condensed"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/return_date"
        app:layout_constraintStart_toEndOf="@+id/code"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/return_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/load"
        android:textAlignment="center"
        android:textSize="12sp"
        app:fontFamily="sans-serif-condensed"
        app:layout_constraintBaseline_toBaselineOf="@+id/delivery_date"
        app:layout_constraintEnd_toStartOf="@+id/name"
        app:layout_constraintStart_toEndOf="@+id/delivery_date" />

    <TextView
        android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:text="@string/load"
        android:textAlignment="center"
        android:textSize="12sp"
        app:fontFamily="sans-serif-condensed"
        app:layout_constraintBaseline_toBaselineOf="@+id/return_date"
        app:layout_constraintEnd_toStartOf="@+id/btn"
        app:layout_constraintStart_toEndOf="@+id/return_date" />

    <ImageView
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="11dp"
        android:layout_marginRight="11dp"
        android:background="@drawable/list_btn"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="15dp"
        android:src="@drawable/ic_list_icon_home_ldpi"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/name" />


</androidx.constraintlayout.widget.ConstraintLayout>

